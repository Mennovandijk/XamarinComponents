<Project Sdk="MSBuild.Sdk.Extras/2.0.54">
  <PropertyGroup>
    <AssemblyName>Xamarin.GoogleFirebase.ML.Kit.SmartReply</AssemblyName>

    <MonoAndroidResourcePrefix>Resources</MonoAndroidResourcePrefix>
    <MonoAndroidAssetsPrefix>Assets</MonoAndroidAssetsPrefix>
    <AndroidUseLatestPlatformSdk>False</AndroidUseLatestPlatformSdk>
    <AndroidUseIntermediateDesignerFile>True</AndroidUseIntermediateDesignerFile>
    <AndroidResgenFile>Resources\Resource.designer.cs</AndroidResgenFile>

    <TargetFramework>MonoAndroid90</TargetFramework>
    <AndroidCodegenTarget>XAJavaInterop1</AndroidCodegenTarget>
  </PropertyGroup>

  <PropertyGroup>
    <IsBindingProject>true</IsBindingProject>
    <AndroidClassParser>class-parse</AndroidClassParser>
  </PropertyGroup>

  <PropertyGroup>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>Xamarin.GoogleFirebase.ML.Kit.SmartReply</PackageId>
    <PackageVersion>16.0.0</PackageVersion>
    <Title>Xamarin.GoogleFirebase.ML.Kit.SmartReply</Title>
    <PackageDescription>Bindings for Xamarin Google/Firebase ML.Kit smart-reply package</PackageDescription>
    <Owners>Microsoft</Owners>
    <Authors>Microsoft</Authors>
    <Copyright>Â© Microsoft Corporation. All rights reserved.</Copyright>
    <PackageLicenseUrl>https://go.microsoft.com/fwlink/?linkid=2109280</PackageLicenseUrl>
    <PackageProjectUrl>https://go.microsoft.com/fwlink/?linkid=2109279</PackageProjectUrl>
    <RequireLicenceAcceptance>true</RequireLicenceAcceptance>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageTags>xamarin, android, bindings, google, firebase, ml.kit, smart-reply, smart, reply</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="Additions\" />
    <Folder Include="Jars\" />
  </ItemGroup>
  <ItemGroup>
    <LibraryProjectZip Include="..\..\..\externals\android\smart-reply-16.0.0.aar">
      <Link>Jars\smart-reply-16.0.0.aar</Link>
    </LibraryProjectZip>
  </ItemGroup>
  <ItemGroup>
    <None Remove="Transforms\EnumFields.xml" />
    <None Remove="Transforms\EnumMethods.xml" />
    <None Remove="Transforms\Metadata.Namespaces.xml" />
    <None Remove="Transforms\Metadata.xml" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Xamarin.AndroidX.Core" Version="1.3.0.3" />
    <PackageReference Include="Xamarin.Google.Android.DataTransport.TransportApi" Version="2.2.0" />
    <PackageReference Include="Xamarin.Google.Android.DataTransport.TransportBackendCct" Version="2.2.2" />
    <PackageReference Include="Xamarin.Google.Android.DataTransport.TransportRuntime" Version="2.2.2" />
    <PackageReference Include="Xamarin.GooglePlayServices.Base" Version="117.2.1" />
    <PackageReference Include="Xamarin.GooglePlayServices.Clearcut" Version="117.0.0" />
    <PackageReference Include="Xamarin.GooglePlayServices.Phenotype" Version="117.0.0" />
    <PackageReference Include="Xamarin.Firebase.Components" Version="116.0.0" />
    <PackageReference Include="Square.OkHttp3" Version="4.2.2" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Xamarin.GoogleFirebase.ML.Kit.Common\Xamarin.GoogleFirebase.ML.Kit.Common.csproj" />
    <ProjectReference Include="..\Xamarin.GoogleFirebase.ML.Kit.Language.Id\Xamarin.GoogleFirebase.ML.Kit.LanguageId.csproj" />
  </ItemGroup>
  <ItemGroup>
    <TransformFile Include="Transforms\EnumFields.xml" />
    <TransformFile Include="Transforms\EnumMethods.xml" />
    <TransformFile Include="Transforms\Metadata.Namespaces.xml" />
    <TransformFile Include="Transforms\Metadata.xml" />
  </ItemGroup>
</Project>
