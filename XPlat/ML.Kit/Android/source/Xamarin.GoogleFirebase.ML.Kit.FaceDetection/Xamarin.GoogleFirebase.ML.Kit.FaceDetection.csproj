<Project Sdk="MSBuild.Sdk.Extras/2.0.54">
  <PropertyGroup>
    <AssemblyName>Xamarin.GoogleFirebase.ML.Kit.FaceDetection</AssemblyName>

    <MonoAndroidResourcePrefix>Resources</MonoAndroidResourcePrefix>
    <MonoAndroidAssetsPrefix>Assets</MonoAndroidAssetsPrefix>
    <AndroidUseLatestPlatformSdk>False</AndroidUseLatestPlatformSdk>
    <AndroidUseIntermediateDesignerFile>True</AndroidUseIntermediateDesignerFile>
    <AndroidResgenFile>Resources\Resource.designer.cs</AndroidResgenFile>

    <TargetFramework>MonoAndroid90</TargetFramework>
    <AndroidCodegenTarget>XAJavaInterop1</AndroidCodegenTarget>
  </PropertyGroup>

  <PropertyGroup>
    <IsBindingProject>true</IsBindingProject>
    <AndroidClassParser>class-parse</AndroidClassParser>
  </PropertyGroup>

  <PropertyGroup>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>Xamarin.GoogleFirebase.ML.Kit.FaceDetection</PackageId>
    <PackageVersion>16.0.0</PackageVersion>
    <Title>Xamarin.GoogleFirebase.ML.Kit.FaceDetection</Title>
    <PackageDescription>Bindings for Xamarin Google/Firebase ML.Kit face-detection package</PackageDescription>
    <Owners>Microsoft</Owners>
    <Authors>Microsoft</Authors>
    <Copyright>Â© Microsoft Corporation. All rights reserved.</Copyright>
    <PackageLicenseUrl>https://go.microsoft.com/fwlink/?linkid=2109280</PackageLicenseUrl>
    <PackageProjectUrl>https://go.microsoft.com/fwlink/?linkid=2109279</PackageProjectUrl>
    <RequireLicenceAcceptance>true</RequireLicenceAcceptance>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageTags>xamarin, android, bindings, google, firebase, ml.kit, face-detection, face, detection</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="Additions\" />
    <Folder Include="Jars\" />
  </ItemGroup>
  <ItemGroup>
    <LibraryProjectZip Include="..\..\..\externals\android\face-detection-16.0.0.aar">
      <Link>Jars\face-detection-16.0.0.aar</Link>
    </LibraryProjectZip>
  </ItemGroup>
  <ItemGroup>
    <None Remove="Transforms\EnumFields.xml" />
    <None Remove="Transforms\EnumMethods.xml" />
    <None Remove="Transforms\Metadata.Namespaces.xml" />
    <None Remove="Transforms\Metadata.xml" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Xamarin.GooglePlayServices.Base" Version="117.2.1" />
    <PackageReference Include="Xamarin.GooglePlayServices.Basement" Version="117.2.1" />
    <PackageReference Include="Xamarin.AndroidX.Lifecycle.ViewModel" Version="2.2.0.3" />
  </ItemGroup>
  <ItemGroup>
    <TransformFile Include="Transforms\EnumFields.xml" />
    <TransformFile Include="Transforms\EnumMethods.xml" />
    <TransformFile Include="Transforms\Metadata.Namespaces.xml" />
    <TransformFile Include="Transforms\Metadata.xml" />
  </ItemGroup>
</Project>
